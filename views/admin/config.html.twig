{% extends "base.html.twig" %}

{% block main %}



    <!-- Main content -->
    <section class="content" xmlns="http://www.w3.org/1999/html">
        <div class="row">

            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Vehiculos</h3>
                        <button type="button" class="btn btn-primary float-right" data-toggle="modal"
                                data-target="#mainNewModal">Nuevo
                        </button>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class=" border-form">
                            <div class="container width-100">
                                <div class="large-12 column">
                                    <div class="xzoom-container">
                                        <img class="xzoom xzoom-width"
                                             src="data:{{ vehicle.vehicleBrandImgType }}; base64,{{ vehicle.vehicleBrandImg }}"
                                             alt="Logo de {{ vehicle.vehicleBrand }}">

                                    </div>
                                </div>
                            </div>
                            <div class=" border-form">
                                <form class="form-horizontal">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="model" class="col-sm-3 control-label">Modelo:</label>
                                                <div class="col-sm-9">
                                                    <input type="text" id="model" class="form-control"
                                                           placeholder="{{ vehicle.vehicleModel }}"
                                                           title="Modelo del vehivculo" disabled>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="brand" class="col-sm-3 control-label">Marca:</label>
                                                <div class="col-sm-9">
                                                    <select id="brand" class="form-control" title="Marca del vehiculo"
                                                            disabled>
                                                        {% for brand in array.vehicleBrandList %}
                                                            <option value="{{ brand.vehicleBrand }}"
                                                                    {% if vehicle.vehicleBrand == brand.vehicleBrand %}selected="selected"{% endif %}>{{ brand.vehicleBrand }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="year1" class="col-sm-3 control-label">Inicio:</label>
                                                <div class="col-sm-9">
                                                    <input type="number" step="0.01" id="year1" class="form-control"
                                                           placeholder="{{ vehicle.firstYear }}"
                                                           title="A単o de inicio de la serie"
                                                           disabled>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="year2" class="col-sm-3 control-label">Final:</label>
                                                <div class="col-sm-9">
                                                    <input type="number" step="0.01" id="year2" class="form-control"
                                                           placeholder="{{ vehicle.lastYear }}"
                                                           title="A単o de finalizacion de la serie"
                                                           disabled>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
















    <!-- Modal ---------------------------------------------------------------------------------------------------->
    <div id="mainSelectModal{{ loop.index }}" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Detalles del Vehiculo</h4>
                </div>
                <div class="modal-body">

                    <div class=" border-form">
                        <div class="container width-100">
                            <div class="large-12 column">
                                <div class="xzoom-container">
                                    <img class="xzoom xzoom-width"
                                         src="data:{{ vehicle.vehicleBrandImgType }}; base64,{{ vehicle.vehicleBrandImg }}"
                                         alt="Logo de {{ vehicle.vehicleBrand }}">

                                </div>
                            </div>
                        </div>
                        <form class="form-horizontal">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="model" class="col-sm-3 control-label">Modelo:</label>
                                        <div class="col-sm-9">
                                            <input type="text" id="model" class="form-control"
                                                   placeholder="{{ vehicle.vehicleModel }}"
                                                   title="Modelo del vehivculo" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="brand" class="col-sm-3 control-label">Marca:</label>
                                        <div class="col-sm-9">
                                            <select id="brand" class="form-control" title="Marca del vehiculo"
                                                    disabled>
                                                {% for brand in array.vehicleBrandList %}
                                                    <option value="{{ brand.vehicleBrand }}"
                                                            {% if vehicle.vehicleBrand == brand.vehicleBrand %}selected="selected"{% endif %}>{{ brand.vehicleBrand }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="year1" class="col-sm-3 control-label">Inicio:</label>
                                        <div class="col-sm-9">
                                            <input type="number" step="0.01" id="year1" class="form-control"
                                                   placeholder="{{ vehicle.firstYear }}"
                                                   title="A単o de inicio de la serie"
                                                   disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="year2" class="col-sm-3 control-label">Final:</label>
                                        <div class="col-sm-9">
                                            <input type="number" step="0.01" id="year2" class="form-control"
                                                   placeholder="{{ vehicle.lastYear }}"
                                                   title="A単o de finalizacion de la serie"
                                                   disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

{% endblock %}