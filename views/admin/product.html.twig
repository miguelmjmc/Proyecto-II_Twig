                                                    <option>{{ product.productClass }}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="brand" class="col-sm-3 control-label">Marca:</label>
                                            <div class="col-sm-9">
                                                <select id="brand" class="form-control" title="Marca del producto"
                                                        disabled>
                                                    <option>{{ product.productBrand }}</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="stock" class="col-sm-3 control-label">Stock:</label>
                                            <div class="col-sm-9">
                                                <select id="stock" class="form-control" title="Marca del producto"
                                                        disabled>
                                                    <option>{{ product.stock }}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="price" class="col-sm-3 control-label">Precio:</label>
                                            <div class="col-sm-9">
                                                <input type="number" step="0.01" id="price" class="form-control"
                                                       placeholder="{{ product.price }}" title="Precio del producto"
                                                       disabled>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="offer" class="col-sm-3 control-label">Oferta:</label>
                                            <div class="col-sm-9">
                                                <input type="number" step="0.01" id="offer" class="form-control"
                                                       placeholder="{{ product.offer }}"
                                                       title="Precio de oferta del producto"
                                                       readonly>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="vihicle" class="col-sm-12 control-label">Vehiculos:</label>
                                            <div class="col-sm-12">

                                                <select id="main-pop-select" class="form-control"
                                                        title="Vehiculos que utilizan el producto" disabled>
