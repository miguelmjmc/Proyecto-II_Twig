{% extends "base.html.twig" %}

{% block main %}

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                <div class="box box-default collapsed-box">
                    <div class="box-header">
                        <h3 class="box-title">Marcas de Productos</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                        class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="th-2">Nombre</th>
                                <th class="th-2">Opciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for brand in array.productBrandList %}
                                <tr>
                                    <td class="td-2">{{ brand.productBrand }}</td>
                                    <td class="td-2">
                                        <!-- Trigger the modal with a button -->
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-eye"></i></button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-pencil"></i></button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-close"></i></button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- / .table -->
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->


            <div class="col-lg-4 col-sm-12">
                <div class="box box-default collapsed-box">
                    <div class="box-header">
                        <h3 class="box-title">Categorias de Productos</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                        class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="th-2">Nombre</th>
                                <th class="th-2">Opciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for category in array.productCategoryList %}
                                <tr>
                                    <td class="td-2">{{ category.productCategory }}</td>
                                    <td class="td-2">
                                        <!-- Trigger the modal with a button -->
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-eye"></i></button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-pencil"></i></button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-close"></i></button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- / .table -->
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->


            <div class="col-lg-4 col-sm-12">
                <div class="box box-default collapsed-box">
                    <div class="box-header">
                        <h3 class="box-title">Clases de Productos</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                        class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="th-2">Nombre</th>
                                <th class="th-2">Opciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for class in array.productClassList %}
                                <tr>
                                    <td class="td-2">{{ class.productClass }}</td>
                                    <td class="td-2">
                                        <!-- Trigger the modal with a button -->
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-eye"></i></button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-pencil"></i></button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#myModal"><i class="fa fa-close"></i></button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- / .table -->
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->

            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Productos</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th class="th-5">Codigo</th>
                                <th class="th-5">Producto</th>
                                <th class="th-5">Marca</th>
                                <th class="th-5">Visibilidad</th>
                                <th class="th-5">Opciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in array.productList %}
                                <tr>
                                    <td class="td-5">{{ product.code }}</td>
                                    <td class="td-5">{{ product.productClass }}</td>
                                    <td class="td-5">{{ product.productBrand }}</td>
                                    <td class="td-5">{{ product.status }}</td>
                                    <td class="td-5">
                                        <!-- Trigger the modal with a button -->
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#selectModal{{ loop.index }}"><i class="fa fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#updateModal{{ loop.index }}"><i class="fa fa-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-box-tool" data-toggle="modal"
                                                data-target="#deleteModal{{ loop.index }}"><i class="fa fa-close"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- / .table -->
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>






    {% for product in array.productList %}
        <!-- Modal -->
        <div id="selectModal{{ loop.index }}" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Detalles del Producto</h4>
                    </div>
                    <div class="modal-body">
                        <div class="border-form">
                            <form class="form-horizontal">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="code" class="col-sm-3 control-label">Codigo:</label>
                                        <div class="col-sm-9">
                                            <input type="text" id="code" class="form-control"
                                                   placeholder="{{ product.code }}"
                                                   title="Codigo del producto" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="class" class="col-sm-3 control-label">Clase:</label>
                                        <div class="col-sm-9">
                                            <select id="class" class="form-control" title="Clase del producto" disabled>
                                                <option>{{ product.productClass }}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="brand" class="col-sm-3 control-label">Marca:</label>
                                        <div class="col-sm-9">
                                            <select id="brand" class="form-control" title="Marca del producto" disabled>
                                                <option>{{ product.productBrand }}</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="stock" class="col-sm-3 control-label">Stock:</label>
                                        <div class="col-sm-9">
                                            <select id="stock" class="form-control" title="Marca del producto" disabled>
                                                <option>{{ product.stock }}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="price" class="col-sm-3 control-label">Precio:</label>
                                        <div class="col-sm-9">
                                            <input type="number" step="0.01" id="price" class="form-control"
                                                   placeholder="{{ product.price }}" title="Precio del producto"
                                                   readonly>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="offer" class="col-sm-3 control-label">Oferta:</label>
                                        <div class="col-sm-9">
                                            <input type="number" step="0.01" id="offer" class="form-control"
                                                   placeholder="{{ product.offer }}"
                                                   title="Precio de oferta del producto"
                                                   readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm12">
                                    <div class="form-group">
                                        <label for="description" class="col-sm-2 control-label">Descripción:</label>
                                        <div class="col-sm-10">
                                        <textarea id="description" class="form-control" rows="5"
                                                  placeholder="{{ product.description }}"
                                                  title="descripción del producto"
                                                  readonly></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="img" class="col-sm-2 control-label">Imagenes</label>
                                        <div class="col-sm-10">
                                            <input id="input-24" name="input24[]" type="file" multiple
                                                   title="cargar imagen"
                                                   required>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    {% endfor %}

    {% for product in array.productList %}
        <!-- Modal -->
        <div id="updateModal{{ loop.index }}" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Editar Producto</h4>
                    </div>
                    <div class="modal-body">
                        <p>Some text in the modal.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    {% endfor %}

    {% for product in array.productList %}
        <!-- Modal -->
        <div id="deleteModal{{ loop.index }}" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Eliminar Producto</h4>
                    </div>
                    <div class="modal-body">
                        <p>Some text in the modal.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    {% endfor %}


{% endblock %}