{% extends "base.html.twig" %}

{% block main %}

    <!-- Main content -->
    <section class="content" xmlns="http://www.w3.org/1999/html">
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <div class="box box-default collapsed-box">
